<ul class="list-group">
{{#each this }}
  <li class="list-group-item list-group-item-primary">
<div onclick="window.open('{{link}}'); return false;" class="container primary" >
<div class="row">
<div class="col-2 mobile-hide"><img style="max-height:80px;" src="{{image.url}}" alt="{{image.title}}" /></div>
<div class="col-10 d-flex align-items-center" ><span class="align-middle"><h2>{{title}}</h2></span></div>
</div></div></li>
  {{#each this.items}}
  <li class="list-group-item" onclick="window.open('{{link}}'); return false;">
    <h2 >{{title}}</h2>
    <small class="d-block text-muted">{{pubDate}}</small>
    <img src="{{enclosure.url}}" style="float:left; max-width:100px;margin-right: 10px;" />
{{content}}
  </li>
  <li class="list-group-item list-divider"></li>
{{/each}}
{{/each}}
</ul>
